<%= form_with(model: product) do |form| %>
  <%= form.text_field_group :name %>

  <%= form.select_group :brand_id, @brands.pluck(:name, :id), { include_blank: true } %>

  <%= form.text_area_group :description%>

  <%= form.number_field_group :price %>
  
  <%= form.submit_actions 'Save', modal: true, class: 'button is-primary' %>
<% end %>
